//三步翻转法
int is_left_move(char *str,char *cmp_str){
    int sign = 0;
    int len = strlen(str);
    int i=0;
    for(i=0;i<len;i++){
        left_move(str,1);
        if( strcmp(str,cmp_str) == 0 ) sign=1;
    }
    return sign;
}
int main(){
    char arr1[]="abcdef";
    char *arr2 = "cdefab";
    int ret = is_left_move(arr1,arr2);
    printf("%d\n",ret);
    return 0;
}
