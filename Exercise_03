#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <assert.h>

//字符串旋转
int cmp_str(char *str,char *cmp_str){
    assert(str);
    int size = strlen(str);
    int sign = 0;
    int i=0;   
    for(i=0;i<size-1;i++){
        if( strcmp(str,cmp_str) == 0) sign=1;
        char temp = *str;
        int j=0;
        for(j=0;j<size;j++){
            *(str+j) = *(str+j+1);
        }
        *(str+size-1) = temp;
    }
    return sign;
}
