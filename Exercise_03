//2、三步翻转法(给定要翻转的次数)
//self
void _swaq(char *e1,char *e2){
    while(e1<e2){
        char temp = *e1;
        *e1++ = *e2;
        *e2-- = temp;
    }
}
int my_left_move(char *str,int step,char *cmp_str){
    char *mid = str+step-1;
    char *tail = str+strlen(str)-1;
    char *head = str;
    _swaq(head,mid);
    mid = str+step;
    _swaq(mid,tail);
    tail = str+strlen(str)-1;
    head = str;
    _swaq(head,tail);
    printf("%s\n",str);
    if(strcmp(str,cmp_str)==0) return 1;
    else return 0;
}
