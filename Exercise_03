//answer
void reverse(char *head,char *tail){
    assert(head!=NULL);
    assert(tail!=NULL);
    while(head<tail){
        char temp = *head;
        *head++ = *tail;
        *tail-- = temp;
    }
}
int left_move(char *str,int step){
    int len = strlen(str);
    assert(step<=len);
    reverse(str,str+step-1);//逆序左边
    reverse(str+step,str+len-1);//逆序右边
    reverse(str,str+len-1);//逆序整体
}
